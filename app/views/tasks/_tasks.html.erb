<% if tasks.any? %>
  <ul class="list-unstyled mt-2">
    <% tasks.each do |task| %>
      <li class="d-flex">

        <div>
          <div>
            <span class="text-muted">posted at <%= task.created_at %></span>
          </div>
          <div>
            ID: <%= link_to task.id, task %>
            <span>ステータス：<%= task.status %></span>
            <span>コンテンツ：<%= task.content %></span>
          </div>
        </div>
      </li>
    <% end %>
  </ul>
  <%== pagy_bootstrap_nav(@pagy) %>
<% end %>